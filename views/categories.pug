extends layout

block content
	.bar-name
		h3=user.restaurantName
	.container.theme-showcase(role='main')
		h1 Categorías
		.row
			.col-md-6
				form(action='/admin/categories', method='POST', role='form')
						.form-group
							label(for='') Nombre
							input.form-control(type='text', name='name', autofocus, placeholder='Add new category...')
						button.btn.btn-primary(type='submit') Añadir
			.col-md-6
				table.table.table-hover
					thead
						tr
							th='Nombre'
							th='Opciones'
					tbody.categories
						each category in categories
							tr(data-id=category._id)
								td=category.name
								td
									div.btn-group.btn-group-xs(role="group")
										button.btn.btn-danger.delete(type="button")='Borrar'

